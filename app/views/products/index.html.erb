
<h2><a href='/products/new'>Add Products</a></h2>

<div class="content_container">
  <p class="flash_notice"><%= flash[:alert] %></p>

  <% @products.each do |product| %>
    <div class="product_container">
      <div class="product_picture_small">
        <img src='http://upslopebrewing.com/wp-content/uploads/cache/2012/03/upslope-craft-lager/-195619099.png'>
      </div>
      <!--end product_picture-->

      <div class="product_description">
        <li>
          <%= link_to product.name, product_path(product) %>
        </li>
        <li>
          <%= product.description %>
        </li>
        <li>
          <%= product.abv %>
        </li>
      </div>
      <!--end product_description-->
    </div>
    <!--end product_container-->
  <% end %>
</div><!--end content_container-->