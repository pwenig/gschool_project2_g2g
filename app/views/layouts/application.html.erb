<!DOCTYPE html>
<html>
<head>
  <title>Growlers to Go</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<header>
  <div id="header_container">
    <a href="/"><%= image_tag('placeholder.png')%></a>
  </div>
    <!--end of header container-->
</header>


<nav>
  <div id="nav_container">
    <ul id="menu">
      <li><a href="/">Growlers to Go</a></li>
      <% if current_user %>
        <li><a href="#">Welcome, <%= current_user.email %></a></li>

        <li><%= link_to 'Logout', brewery_login_path(current_user.id), method: :delete %></li>
      <% else %>
        <li><a href="/brewery_login/new">Login</a></li>
        <li><%= link_to 'Register', new_brewery_path %></li>
      <% end %>
    </ul>
  </div>
  <!--end navigation-->
</nav>


<%= yield %>

</body>
</html>
